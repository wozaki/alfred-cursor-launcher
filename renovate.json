{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "automergeType": "pr",
    "platformAutomerge": true,
    "postUpdateOptions": [
        "gomodTidy"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin"
            ],
            "automerge": true
        }
    ]
}
